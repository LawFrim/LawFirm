<div class="container">

    <div class="row well" style="opacity:0.95;width:70%;">

        <!-- major photo -->
        <div class="col-md-2">
            <br>
            <%= render_user_avatar(@user) %>

        </div>

        <!-- title, description and add to cart -->
        <div class="col-md-4 col-md-offset-1">
            <h3>
                <h6>我的资料</h6>
            </h3>

            <p>用户认证：
                <%= render_user_vip(@user) %></p>

            <p>用户名：
                <%= @user.user_name %></p>

            <td>用户名partial：</td>
            <%= render :partial => "user_names", :collection => @user_name, :as => :user_name %>

        </p>
        <p>
            <td>电子邮件：
            </td>
            <td><%= @user.email %></td>
        </p>

        <p>所在地区：<%= @user.district %></p>

        <br>
        <div>
            <%= link_to("修改个人资料", edit_account_user_path(@user), :class => "btn  btn-secondary text-uppercase flat animation") %>
        </div>
        <br>
        <div>
            <%= link_to("修改密码", edit_user_registration_path(@user), class: "btn  btn-secondary text-uppercase flat animation" ) %>
        </div>
    </div>

</div>
</div>
</div>
