 <h2>我的合同文件</h2>



<div class="row">

      <% @documents.each do |document| %>
      <div class="col-md-3 col-md-3">
        <div class="thumbnail" style="text-center;">
        <% if document.client_docs.present? %>
        <%= link_to image_tag(document.client_docs[0].preview.url), "#" %>
        <% else %>
          <%= link_to image_tag "http://placehold.it/300?text=合同首页" %>
          <% end %>
        <ul style="list-style: none;">
        <li>创建时间</li>
        <li><%= document.created_at %></li>
        <li>提交意见</li>
        <li><%= document.description %></li>
        <% if document.client_docs.present? %>
        <li><%= link_to "下载合同", document.client_docs[0].url %></li>
        <% end %>
        <%= link_to "编辑", edit_account_document_path(document), class:"btn btn-sm btn-primary"%>
        <%= link_to "删除", account_document_path(document), method: :delete, class: "btn btn-sm btn-danger", data: { confirm: "确认删除合同？"}%>
        </div>
      </div>

          <% end %>
        </div>

      </div>
