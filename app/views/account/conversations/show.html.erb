<div class="col-md-12">

  <!-- 客户问题 -->
  <h4>问题： <%= @question.content %></h4>
  <h6>领域： <%= @question.area %></h6>
  <h6>地区： <%= @question.district %></h6>
  <hr>

    <!-- 查看历史信息 -->
    <% if @messages.present? %>
      <% @messages.each do |m| %>

        <!-- 历史消息 -->
        <% if m.sender == current_user %>
          <blockquote>
            <p><%= m.body %></p>
            <footer><%= m.sender.email %></footer>
          </blockquote>
        <% else %>
          <blockquote class="blockquote-reverse">
            <p><%= m.body %></p>
            <footer><%= m.sender.email %></footer>
          </blockquote>
        <% end %>
        <!-- 历史消息 -->



      <% end %>
    <% end %>    

      <!-- <hr> -->

    <!-- 如果最后一条是自己的留言，则不让再追问 -->
    <% if i_send_last_message(@messages) %>
      <div class="alert alert-success text-center" role="alert">正在等待律师的回答...</div>

    <% else %>
      <!-- 如果有了新的律师回答，则可以追问 -->
      <%= simple_form_for @new_answer ,url: account_question_conversations_path(@question) do |a| %>
      <% if @conversation.present? %>
      <!-- <h1>对话id:<%#= @conversation.id %></h1> -->
      <!-- 隐藏提交当前会话id -->
      <%= a.input :conversation_id, :as => :hidden, :input_html => { :value => @conversation.id } %>
      
      <% end %>
      
      <div class="form-group">
          <%= a.input :content, label: '追问:',input_html: { class: "form-control"} %>
          
      </div>
      <%= a.submit "提交", class: "btn btn-primary", data: { disable_with: "提交..." } %>
      <% end %>

    <% end %>


    

</div>