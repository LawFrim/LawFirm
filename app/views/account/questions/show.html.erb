
<div class="answersHeading col-md-12">
我的回答
</div>

<div class="pull-left col-sm-12 col-md-8">
  <% if @conversations.present? %>
    <% @conversations.each do |c| %>
  <%= link_to account_question_conversation_path(question_id: @question.id,id: c.id) do %>
  <div class="row answeredBy">

        <!-- 确定回答框基本警告模式 -->


            <div class="answerFrom col-md-2">
              <!-- 用户头像 -->
              <div class="lawyerImage">
              <%= render_user_small_avatar(c.originator) %>
            </div>
            </div>
              <% if c.last_sender == current_user %>
                <p class="lawyerName"> <%= c.originator.user_name %></p>
                <p> 稍后马上回复你的追问 </p>
              <% else %>
                <p class="lawyerName"> <%= c.originator.user_name %></p>
                  <p class="answerFrom">回答了您的问题 </p>
              <% end %>
  <div class="answerArrow"></div>
      </div>
      <% end %>





    <% end %>
  <% else %>
    <div class="alert alert-warning" role="alert">律师们正在紧张的撰写答案...</div>
  <% end %>




<!---please refactsor -->
<div class="answer">

    <div class="Clearfix">

    </div>
      <div class="info">
      <p><span>姓名:</span><%= current_user.user_name %></p>
      <p><span>日期:</span> <%= @question.updated_at %></p>
      <p><span>领域:</span> <%= @question.area %></p>
    </div>
      <p><%= render_user_small_avatar(current_user) %><span>问题</span> </p>
      <div class="answerText">
      <%= @question.content %>
      </div>


      <!-- f1042-tryAttachmentForMaibox -->
      <div>
        <%=  image_tag(@question.attachment.url, class: "thumbnail")  %>  
        <p class="pull-left"><%= @question.attachment.file.filename %></p>

        <a href="<%= @question.attachment.url %>" download="" target="_blank">
          <button type="button" class="btn btn-primary btn-xs pull-right">下载</button>
        </a>      
      </div>
      <!-- f1042-tryAttachmentForMaibox -->


    </div>

  </div>

</div>
</div>





</div>
