    <!-- 查看历史信息 -->
    <% if @conversations.present? %>
      <% @conversations.each do |c| %>
      
        <!-- 律师来答 -->
        <%= link_to account_question_conversation_path(question_id: @question.id,id: c.id) do %>
        <div class="row">
          <button type="button" class="btn btn-default btn-lg col-md-8">
            <div class="row">
              
              <div class="col-md-2">

                <!-- 用户头像 -->
                <%= render(partial: "common/user_img",locals: {user: c.originator}) %>  
                <!-- 用户头像 -->

              </div>
              <div class="col-md-10 text-left">
                <% if c.last_sender == current_user %>
                  <h6>  正在等待</h6>
                  <h4> <%= c.originator.user_name %></h4> 
                  <h6> 的回复... </h6>
                <% else %>
                  <h4> <%= c.originator.user_name %></h4>
                  <h6>  回答了您的问题... </h6>
                <% end %>
              </div>
            </div>

          </button>
        </div>
        <% end %>
        <!-- 律师来答 -->

        <hr> 




      <% end %>
    <% else %>
      <div class="alert alert-info" role="alert">律师们正在紧张的撰写答案...</div>
    <% end %>