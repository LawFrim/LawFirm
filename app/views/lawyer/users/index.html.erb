
<div class="container-fluid well">

    <div class="col-md-2">
        <% if !@user.user_avatar.present? %>
        <%= image_tag "http://placehold.it/150x150" %>
    <% else %>
        <%= image_tag (@user.user_avatar.url(:middle)) %>
        <% end %>

    </div>
    <div class="col-md-8 col-md-offset-1">
        <table class="table user-table-info">
            <tbody>
              <tr>
                <h6>我的资料</h6>

              </tr>

                <tr>
                    <td>用户名</td>
                  <td>  <%= render :partial => "common/user_name", :locals =>{:lawyer => @user},:as => :user %></td>

                </tr>


                <tr>
                    <td>好评</td>
                    <td><div id="average_rating"></div></td>
                </tr>

                <tr>
                    <td>电子邮件</td>
                    <td><%= @user.email %></td>
                </tr>
                <tr>
                    <td>所在地区</td>
                    <td><%= @user.district %></td>
                </tr>

                <tr>
                    <td>领域</td>
                    <td><%= @user.area %></td>
                </tr>
                <tr>
                    <td>律师事务所</td>
                    <td><%= @user.lawfirm %></td>
                </tr>
                <tr>
                    <td>律师证号</td>
                    <td><%= @user.certificate_number %></td>
                </tr>
                <td>律师证</td>
                <td>

                    <% if !@user.certificate.present? %>
                    <%= image_tag "http://placehold.it/150x150" %>
                <% else %>
                    <%= image_tag(@user.certificate.preview.url) %>
                    <% end %>
                </td>

            </tbody>
        </table>


    <div>
      <%= link_to("完善个人资料", edit_lawyer_user_path(@user), :class => "btn  btn-secondary text-uppercase flat animation") %>
      <%= link_to("修改密码", edit_user_registration_path, class: "btn  btn-secondary text-uppercase flat animation" ) %>

          </div>
        </div>
        </div>
    </div>
  </div>
</div>



 <!-- 星星评级  -->
<script>

$(function() {

  // 锁定部分样式
  $('#average_rating').raty({
    // 设置rating路径
    path:"https://ooo.0o0.ooo/2016/11/29/",
    starOff: '583d7514b7242.jpg',
    starHalf: '583d7514d2220.jpg',
    starOn: '583d7514f04c2.jpg',
    size: 32,
    readOnly: true, 
    score: '<%= @lawyer_rating %>',
    round: { down: .25, full: .6, up: .76 } 
  });

    
});


</script>
