<div class="row">
  <div class="container">

  <div class="container-fluid" style="background:url(https://ooo.0o0.ooo/2016/11/24/583691e5c2104.jpg); background-size: 85%;background-repeat: repeat-y;min-height:1000px;">

    	<div class="row well"  style="opacity:0.95;width:80%;">


<h4>客户合同</h4>




<table class="table table-bordered">
  <thead>
      <tr>
        <td>  #</td>
          <td>合同审查需求意见</td>
          <td>客户信息</td>
          <td>创建时间</td>
        <td>下载合同</td>
      </tr>
  </thead>

  <tbody>
    <% @documents.each do |document| %>
      <tr>
        <td>
          <% if document.client_docs.present? %>
          <% if document.client_docs[0].preview.present? %>
        <%= link_to image_tag(document.client_docs[0].preview.url), "#" %>
        <% else %>
          <%= link_to image_tag "http://placehold.it/300?text=用户合同" %>
          <% end %>
          <% else %>
            该用户尚未上传合同附件
            <% end %>
        </td>
        <td>
          <%= link_to document.description ,lawyer_document_path(document) %>

        </td>
        <td>
          <%= document.user.email %>
        </td>
        <td>
          <%= document.created_at %>

        </td>
        <td>
          <% if document.client_docs.present? %>
          <li><%= link_to "下载合同", document.client_docs[0].url %></li>
          <% else%>
          <li><%= link_to "该客户尚未上传合同", "http://placehold.it/300?text=合同首页" %></li>

          <% end %>

        </td>

      </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>
