<div class="row-fluid">
  <div class="span12">
 
    <table class="table table-bordered table-condensed table-hover">

      <thead>
        <tr>
          <th>
            问题编号
          </th>
          <th>
          领域
          </th>
          <th>
            地域
          </th>
          <th>
            问题缩略
          </th>
          <th>
            更新时间
          </th>
          <th>
            用户信息
          </th>
        </tr>
      </thead>

          <% @questions.each do |question|%>

        <tr>
            <td><%= link_to(question.id,lawyer_question_path(question)) %></td>
            <td><%= question.area %></td>
            <td><%= question.district %></td>
            <td><%= link_to(question.content.first(8),lawyer_question_path(question)) %></td>
            <td><%= question.updated_at %></td>
            <td><%= question.user.email %></td>
          <% end %>
        </tr>
</table>
</div>
      </div>
