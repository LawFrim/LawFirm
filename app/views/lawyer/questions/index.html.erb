<div class="container-fluid well">
          <table class="table table-bordered table-condensed table-hover">

            <thead>
              <tr>
                <th>
                用户信息
                </th>
                <th>
                问题领域
                </th>
                <th>
                  所在地域
                </th>
                <th>
                  问题缩略
                </th>
                <th>
                  更新时间
                </th>
                <th>
                  问题编号
                </th>
              </tr>
            </thead>

              <% if @questions.present? %>
              
                <% @questions.each do |question|%>
                  <!-- 筛除用户注销的情况 -->
                  <% if question.user.present? %>
                    <tr>
                      <td><%= question.user.email %></td>
                      <td><%= question.area %></td>
                      <td><%= question.district %></td>
                      <td><%= link_to(question.content.first(8),lawyer_question_path(question)) %></td>
                      <td><%= question.updated_at %></td>
                      <td><%= link_to(question.id,lawyer_question_path(question)) %></td>
                    </tr>                
                  <% end %>
                  <!--  -->
                <% end %>
              
              <% end %>
          </table>
        </div>
   
