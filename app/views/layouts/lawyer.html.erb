<!DOCTYPE html>
<html>
    <head>
        <title>Lawfirm </title>
        <%= csrf_meta_tags %>

        <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
        <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    </head>

    <body>

        <div class="container-fluid">
            <%= render "common/navbar" %>
            <%= render "common/flashes" %>
            <div class="row">
                <!-- 侧边栏 -->
                <div class="col-md-2 sidebar" >
                    <ul class="nav nav-pills nav-stacked" style="max-width: 300px; padding-top:20px;">
                      <li class="active"><%#= link_to("客户问题", lawyer_questions_path ) %> </li>
                        <li class="active"><%= link_to("律师信息管理",lawyer_users_path )%></li>
                      <li><%= link_to("我回答的问题", "#" ) %> </li>
                      <li><%= link_to("回答新问题", "#") %></li>
                      <li><%= link_to("我审查的合同", "#") %></li>
                      <li><%= link_to("上传新合同审核","#") %></li>
                      <li><%= link_to("审查新合同", "#") %></li>
                      <li class="active"><%= link_to("领域问题", lawyer_questions_path(:order => "lawyer_area")) %></li>
                      <li class="active"><%= link_to("地区问题", lawyer_questions_path(:order => "lawyer_district")) %></li>


                    </ul>
                </div>
                <!-- 内容 -->
                <div class="col-md-10">
                    <%= yield %>
                </div>
            </div>

        </div>

        <%= render "common/footer" %>

    </body>
</html>
