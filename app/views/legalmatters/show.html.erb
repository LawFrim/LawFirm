<div class="col-md-12">


  <h4>问题： <%= @legalmatter.question %></h4>
  <hr>
  <% if @comments.present? %>
    <% @comments.each do |comment|%>
    <p><%= comment.answer %></p>
    <% end %>

  <% end %>
  <%= simple_form_for @new_comment ,url: legalmatter_comments_path(@legalmatter) do |c| %>


  <div class="form-group">
      <%= c.input :answer, label: '初步建议：',input_html: { class: "form-control"} %>

  </div>
  <%= c.submit "提交", class: "btn btn-primary", data: { disable_with: "提交..." } %>
  <% end %>


    

</div>