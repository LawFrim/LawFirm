


    <div class="row well"  style="opacity:0.95;width:100%;">
<ul class="breadcrumb">
    <li class="active">
        <%= link_to("所有用户", admin_users_path) %>
    </li>
    <li>
        <%= link_to("所有会员", admin_users_path(:order => "by_account")) %>
    </li>
    <li>
        <%= link_to("所有律师", admin_users_path(:order => "by_lawyer")) %>
    </li>
</ul>
<table class="table table-bordered">
    <thead>
        <tr>
            <td>用户ID</td>
            <td>用户名</td>
            <td>注册时间</td>
            <td>上次登录时间</td>
            <td>管理选项</td>
            <td>身份认证</td>
            <td>注册角色</td>
            <td>律师声誉</td>
            <td>支付状况</td>
        </tr>
    </thead>

    <tbody>
        <% @users.each do |user| %>
        <tr>
            <td>
                <%= user.id %>

            </td>
            <td>
                <%= render_user_status(user) %>
                <%= user.user_name%>
                <%= render_user_vip(user) %>

            </td>

            <td>
                <%= user.created_at %>
            </td>
            <td>
                <%= user.last_sign_in_at %>
            </td>
            <td>
                <!-- <%= link_to("Edit", edit_admin_user_path(user))%>  -->
                <%= change_user_status(user) %><br>
                <%= link_to("删除用户", admin_user_path(user),
                        method: :delete, data: { confirm: "Are you sure?" },class:"btn  btn-danger btn-xs")  %>

        </td>
        <td>
          <%= chenge_user_vip(user) %>
        </td>
        <td><%= user.role %></td>
        <td>
          待添加
        </td>
        <td>
          <% if user.is_vip?%>
          已支付
          <% else %>
          未支付
            <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<div class="row">
  <p style="padding:220px;"></p>
  <!--此行代码解决页面中footer在上面的问题  -->
</div>
