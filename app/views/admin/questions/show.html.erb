<div class="col-md-12">

  <!-- 客户问题 -->
  <h4>问题： <%= @question.content %></h4>
  <h6>领域： <%= @question.area %></h6>
  <h6>地区： <%= @question.district %></h6>
  <hr>

    <!-- 查看历史信息 -->
    <% if @messages.present? %>
      <% @messages.each do |m| %>

        <!-- 对话样式 -->
        <% if m.sender == current_user %>
          <blockquote>
            <p><%= m.body %></p>
            <footer><%= m.sender.email %></footer>
          </blockquote>
        <% else %>
          <blockquote class="blockquote-reverse">
            <p><%= m.body %></p>
            <footer><%= m.sender.email %></footer>
          </blockquote>
        <% end %>
        <!-- 对话样式 -->

      <% end %>
    <% end %>

    <hr>



  <!-- 如果有人回答，显示历史答案 -->
  <% if @answers.present? %>
    <% @answers.each do |answer|%>
      <p><%= answer.content %></p>

      <!-- 如果回答该问题的人就是当前用户 -->
      <% if answer.user == current_user %>
        <!-- 可以修改 -->
      <% end %>

    <% end %>







    <!-- 如果没人回答，可以回答 -->
  <% else %>

    <%= simple_form_for @new_answer ,url: admin_question_answers_path(@question) do |a| %>
    <% if @conversation.present? %>
    <!-- <h1>对话id:<%#= @conversation.id %></h1> -->
    <!-- 隐藏提交当前会话id -->
    <%= a.input :conversation_id, :as => :hidden, :input_html => { :value => @conversation.id } %>
    
    <% end %>
    
    <div class="form-group">
        <%= a.input :content, label: '法律意见：',input_html: { class: "form-control"} %>
        

    </div>
    <%= a.submit "提交", class: "btn btn-primary", data: { disable_with: "提交..." } %>
    <% end %>



  <% end %>


    

</div>