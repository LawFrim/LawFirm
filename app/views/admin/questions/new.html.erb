<h2> New answer </h2>

<%= simple_form_for [:admin, @question] do |f| %>


  <div class="group">
    <%= f.input :description %>
  </div>

  <div class="group">
    <%= f.input :answer %>
  </div>
  <%= f.input :is_hidden %>
  <%= f.submit "Submit", data: { disable_with: "Submitting..." } %>

<% end %>
