<%= render "devise/sign" %>
  <!-- #分割线 -->
  <div class="col-sm-1 col-offset-0">

     <div id="Layer1" style="position:absolute; margin-top:30px; width:1px; height:335px; z-index:1; background-color: rgb(151, 151, 151);layer-background-color: #666666; border: 1px none rgb(151, 151, 151); "></div>
   </div>
<div class=" col-md-4 col-md-offset-0 ">
       <h5 class="sign-h6">登入</h5>
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs ">
          <%= f.input :email, required: false, autofocus: true,label:false, :placeholder => "电子邮箱" %>
          <%= f.input :password, required: false,label:false, :placeholder => "密码"  %>
          <%= f.input :remember_me, inline_label: '记住我', as: :boolean if devise_mapping.rememberable? %>
        </div>
        <div class="form-actions">
          <%= f.button :submit, "登 录", :class => "btn btn-devise btn-block"  %>
        </div>
        <% end %>
      </br>
        <%= render "devise/shared/links" %>

</div>
</div>
