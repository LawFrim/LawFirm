<div class="container col-xs-6 col-xs-offset-3 col-md-4 col-md-offset-4" style="margin-top: 50px;" >

<h2>修改密码</h2>

<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.error_notification %>

  <%= f.input :reset_password_token, as: :hidden %>
  <%= f.full_error :reset_password_token %>

  <div class="form-inputs">
    <%= f.input :password, label: "新密码", required: true, autofocus: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
    <%= f.input :password_confirmation, label: "确认您的密码", required: true %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "修改我的密码" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
