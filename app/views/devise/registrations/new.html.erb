


                              <div class="well loginContainer container col-md-6 col-xs-offset-3">

                                      <h4>注册</h4>
                                            <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                                            <%= f.error_notification %>

                                            <div class="form-inputs">
                                                <%= f.input :email, label:"邮箱" ,required: true, autofocus: true %>
                                                <%= f.input :password,label:"密码", required: true, hint: ("至少#{@minimum_password_length} 个字符" if @minimum_password_length) %>
                                                <%= f.input :password_confirmation,label:"确认密码", required: true %>
                                            </div>

                                            <div class="form-actions">
                                                <%= f.select :role, 选择角色: User.roles.keys.to_a %>

                                            </div>
                                            <div class="form-actions">
                                                <%= f.button :submit, "注册" %>
                                            </div>
                                            <% end %>

                                            <%= render "devise/shared/links" %>
      </div>

      </div>
