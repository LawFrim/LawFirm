<%= simple_form_for  @user do |u| %>

<div class="form-group">
    <%= u.input :area, label: '擅长的案件类型',collection: [["民事", "民事"],["刑事", "刑事"],["商业", "商业"],["行政", "行政"]],:selected => "民事" %>
    <%= u.input :district, label: '所服务的地区',collection: [["北京", "北京"], ["上海", "上海"],["广州", "广州"],["深圳", "深圳"]],:selected => "北京" %>
    <%= u.input :content, label: '问题描述',input_html: { class: "form-control"} %>


</div>
<%= u.submit "提交", class: "btn btn-primary", data: { disable_with: "提交..." } %>
<% end %>
