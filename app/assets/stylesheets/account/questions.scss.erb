.itemCard {
   height: 27.12rem;
   width: 25.43rem;
   border: .07143rem solid #CCCCCC;
   border-top-color: rgb(204, 204, 204);
   border-top-style: solid;
   border-top-width: 0.07143rem;
   border-right-color: rgb(204, 204, 204);
   border-right-style: solid;
   border-right-width: 0.07143rem;
   border-bottom-color: rgb(204, 204, 204);
   border-bottom-style: solid;
   border-bottom-width: 0.07143rem;
   border-left-color: rgb(204, 204, 204);
   border-left-style: solid;
   border-left-width: 0.07143rem;
   border-image-source: initial;
   border-image-slice: initial;
   border-image-width: initial;
   border-image-outset: initial;
   border-image-repeat: initial;
   background-color: #F2F2F2;
   transition: transform linear .1s;
   transition-property: transform;
   transition-duration: 0.1s;
   transition-timing-function: linear;
   transition-delay: initial;
   overflow: visible;
   margin-bottom: 20px;
   box-shadow: 1px 1px 0 0 #cfcfcf;
}



 .itemCard .cardHeading, {
    border-bottom: .07143rem solid #CCCCCC;
    background-color: #FFFFFF;
    text-align: left;
}

.cardTitle{
  height: 1.71432rem;
  font-size: 16px;
  overflow: hidden;
  white-space: nowrap;
  font-weight: bold;
  line-height: 1.71432rem;
  text-overflow: ellipsis;
  margin-bottom: .35715rem;

}

.topHeading {
  padding:1.07145rem;
}


.questionDate{

  color: #999999;
  font-size: 12px;
  margin-bottom: -2.2857rem;

}

.questionStatus-response{
  width: auto;
  color: #598B25;
  font-size: 14px;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.questionStatus-waiting{
  width: auto;
  color: #e0820e;
  font-size: 14px;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}



.userQuestion{
  padding: 1.4286rem 1.4286rem 0 1.4286rem;
  color: #666666;
  line-height: 1.57146rem;
  word-wrap: break-word;
  max-height: 14.286rem;
  overflow: hidden;
}

.userQuestion span{
  display: block;
  font-weight: bold;
}

.userQuestion a{
  color: black;
  font-weight: normal;
}

.userQuestion a:hover{
    text-decoration: none;
}


.cardGrid  .cardDeck  .cardHeightWrap  .itemCard  .cardHeading  .cardTitle  {
    height: 1.71432rem;
    font-size: 1.4286rem;
    overflow: hidden;
    white-space: nowrap;
    font-weight: 300;
    line-height: 1.71432rem;
    text-overflow: ellipsis;
    margin-bottom: .35715rem;
}

.cardGrid .cardDeck .cardHeightWrap .questionCard, .searchRl .cardDeck .cardHeightWrap .questionCard {
    overflow: visible;
}
.cardGrid .cardDeck .cardHeightWrap .itemCard, .searchRl .cardDeck .cardHeightWrap .itemCard {
    height: 27.12rem;
    width: 21.43rem;
    border: .07143rem solid #CCCCCC;
    background-color: #F2F2F2;
    transition: transform linear .1s;
    overflow: visible;
}


@media only screen and (min-width: 40.063rem)
{
    height: 27.14rem;
}

.cardGrid .cardDeck .cardHeightWrap, .searchRl .cardDeck .cardHeightWrap {
    height: 27.14rem;
    width: auto;
    float: left;
    margin: 0 1.4286rem 1.4286rem 0;
}



.answer{
    border: 1px solid #cccccc;
    padding: 20px;
    margin-bottom: 20px;
    box-shadow: 3px 3px 0 0 #cfcfcf;
  }


 .answeredBy {
      border: 1px solid #cccccc;
      margin-bottom: 20px;
      border-radius: 3px 3px 3px 3px;

    }
.row {
  margin-left: 0 !important;
  margin-right: 0 !important;
}

 .answeredBy.answerFrom .lawyerName {
     font-size: 20px;
